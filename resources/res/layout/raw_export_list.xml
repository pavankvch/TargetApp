<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:tag="layout/raw_export_list_0" android:background="@drawable/shape_rounded_rect_address" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/txt_city_label" android:text="@string/pickup" app:fontPath="@string/bold_font" style="@style/addressListTextStyle"/>
        <TextView android:id="@+id/dash_pickup" android:text="-" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_toEndOf="@+id/txt_city_label" style="@style/addressListTextStyle"/>
        <TextView android:id="@+id/txt_city" android:tag="binding_1" android:layout_toStartOf="@+id/img_edit" android:layout_toEndOf="@+id/dash_pickup" style="@style/addressListTextStyle"/>
        <ImageView android:id="@+id/img_edit" android:padding="4dp" android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_edit_address" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="28dp">
        <TextView android:id="@+id/txt_delivery_label" android:text="@string/delivery" app:fontPath="@string/bold_font" style="@style/addressListTextStyle"/>
        <TextView android:id="@+id/dash_delivery" android:text="-" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_toEndOf="@+id/txt_delivery_label" style="@style/addressListTextStyle"/>
        <TextView android:id="@+id/txt_delivery" android:tag="binding_2" android:layout_toEndOf="@+id/dash_delivery" style="@style/addressListTextStyle"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="28dp">
        <TextView android:id="@+id/txt_parcels_label" android:text="@string/parcels" app:fontPath="@string/bold_font" style="@style/addressListTextStyle"/>
        <TextView android:id="@+id/dash_parcels" android:text="-" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_toEndOf="@+id/txt_parcels_label" style="@style/addressListTextStyle"/>
        <TextView android:id="@+id/txt_parcels" android:tag="binding_3" android:layout_marginStart="4dp" android:layout_toEndOf="@+id/dash_parcels" style="@style/addressListTextStyle"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/txt_weight_label" android:text="@string/weight" app:fontPath="@string/bold_font" style="@style/addressListTextStyle"/>
        <TextView android:id="@+id/dash_weight" android:text="-" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_toEndOf="@+id/txt_weight_label" style="@style/addressListTextStyle"/>
        <TextView android:id="@+id/txt_weight" android:tag="binding_4" android:layout_marginStart="4dp" android:layout_toStartOf="@+id/img_delete" android:layout_toEndOf="@+id/dash_weight" style="@style/addressListTextStyle"/>
        <ImageView android:id="@+id/img_delete" android:padding="4dp" android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_delete_address" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
